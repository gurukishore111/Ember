    {{#each this.model as |product|}}
      <Product
        @model={{product.id}}
        @name={{product.name}}
        @image={{product}}
        @description={{product.description}}
        @oprice={{product.price.original}}
        @cprice={{product.price.current}}
      />
    {{/each}}

